{% extends 'base.html.twig' %}

{% block body %}
    <h1>Acteur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ acteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ acteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ acteur.prenom }}</td>
            </tr>
            <tr>
                <th>Datenaissance</th>
                <td>{% if acteur.dateNaissance %}{{ acteur.dateNaissance|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ acteur.sexe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acteur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('acteur_edit', { 'id': acteur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
